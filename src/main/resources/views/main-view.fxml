                            <ImageView fx:id="imageView4" fitWidth="180" fitHeight="180" preserveRatio="true" />
                        </HBox>
                    </StackPane>

                    <StackPane fx:id="box5" alignment="CENTER">
                        <Rectangle width="800" height="200" fill="#502a2d" />
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <ImageView fx:id="imageView5" fitWidth="180" fitHeight="180" preserveRatio="true" />
                        </HBox>
                    </StackPane>

                    <StackPane fx:id="box6" alignment="CENTER">
                        <Rectangle width="800" height="200" fill="#502a2d" />
