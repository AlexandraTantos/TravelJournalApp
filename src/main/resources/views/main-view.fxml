                            <ImageView fx:id="imageView2" fitWidth="180" fitHeight="180" preserveRatio="true" />
                        </HBox>
                    </StackPane>

                    <StackPane fx:id="box3" alignment="CENTER">
                        <Rectangle width="800" height="200" fill="#502a2d" />
